{
    "general":
    {
        "serial port":"COM3",
        "window name":"Game Capture HD",
        "window width":1920,
        "window height":1080,
        "macro folder":"macros/",
        "picture folder":"pictures/"
    },
    "controls":
    {
        "b":"k",
        "a":"j",
        "x":"i",
        "xl":"l",
        "start":"e",
        "home":60,
        "leftStickXplus":"d",
        "leftStickXminus":"a",
        "leftStickYplus":"w",
        "leftStickYminus":"s",
        "recordMacro":"y",
        "screenshot":"r"
    },
    "pictures":
    {
        "haanit":
        {
            "picture filename":"haanit.png"
        },
        "haanit mask":
        {
            "picture filename":"haanit mask.png"
        }
    },
    "macros":
    {
        "octopath walk":
        {
            "filename":"octopath walk.txt",
            "button":"t",
            "enable image match":true,
            "match threshold":0.97,
            "next macro success":
            ["octopath test haanit first"],
            "next macro fail":
            ["octopath walk"],
            "shared settings":
            {
                "template image":"haanit",
                "mask image":"haanit mask",
                "match method":3,
                "search min x":1550,
                "search min y":30,
                "search max x":1750,
                "search max y":70
            }
        },
        "octopath attack":
        {
            "filename":"octopath attack.txt",
            "enable image match":true,
            "match threshold":0.97,
            "next macro success":
            ["octopath flee"],
            "next macro fail":
            ["octopath win"],
            "share settings from macro":"octopath walk"
        },
        "octopath defend":
        {
            "filename":"octopath defend.txt",
            "enable image match":true,
            "match threshold":0.97,
            "next macro success":
            ["octopath test haanit first"],
            "next macro fail":
            ["octopath win"],
            "share settings from macro":"octopath walk"
        },
        "octopath win":
        {
            "filename":"octopath win.txt",
            "next macro default":
            ["octopath walk", "octopath restore sp"]
        },
        "octopath test haanit first":
        {
            "filename":"octopath test haanit first.txt",
            "enable image match":true,
            "match threshold":0.97,
            "max x":1600,
            "next macro success":
            ["octopath attack"],
            "next macro fail":
            ["octopath defend"],
            "share settings from macro":"octopath walk"
        },
        "octopath restore sp":
        {
            "filename":"octopath restore sp.txt",
            "next macro default":
            ["octopath walk"]
        },
        "octopath flee":
        {
            "filename":"octopath flee.txt",
            "next macro default":
            ["octopath win"]
        }
    }
}